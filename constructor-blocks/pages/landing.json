{
    "title": "Продающий лендинг",
    "description": "Современный landing page с высокой конверсией",
    "type": "page",
    "tags": ["landing", "sales", "marketing", "bootstrap", "conversion"],
    "framework": "bootstrap",
    "tv": ["product_name", "product_price", "product_image", "cta_link"],
    "elements": [
        {
            "type": "row",
            "values": {
                "dropZoneStyles": "display: flex; flex-direction: row; gap: 0; padding: 0; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);",
                "dropZoneClasses": "drop-zone"
            }
        },
        {
            "type": "column",
            "values": {
                "dropZoneStyles": "display: flex; flex-direction: column; gap: 20px; padding: 80px 40px; flex: 1;",
                "dropZoneClasses": "drop-zone"
            },
            "parentIndex": 0
        },
        {
            "type": "content",
            "values": {
                "content": "<h1 class='display-3 text-white'>{{$documentObject['product_name']}}</h1>",
                "innerStyles": "font-weight: 700;",
                "innerClasses": "content-holder"
            },
            "parentIndex": 1
        },
        {
            "type": "content",
            "values": {
                "content": "<p class='lead text-white-50'>{{$documentObject['product_description']}}</p>",
                "innerStyles": "font-size: 1.25rem;",
                "innerClasses": "content-holder"
            },
            "parentIndex": 1
        },
        {
            "type": "content",
            "values": {
                "content": "<div class='d-flex align-items-center'><span class='display-4 text-white fw-bold'>{{$documentObject['product_price']}}</span><span class='text-white-50 ms-2'>₽</span></div>",
                "innerStyles": "margin: 20px 0;",
                "innerClasses": "content-holder"
            },
            "parentIndex": 1
        },
        {
            "type": "button",
            "values": {
                "content": "Купить сейчас",
                "href": "{{$documentObject['cta_link']}}",
                "target": "_self",
                "innerStyles": "background: white; color: #667eea; border: none; padding: 15px 40px; border-radius: 50px; font-size: 1.1rem; font-weight: 600; transition: all 0.3s;",
                "innerClasses": "btn btn-light btn-lg"
            },
            "parentIndex": 1
        },
        {
            "type": "column",
            "values": {
                "dropZoneStyles": "display: flex; flex-direction: column; gap: 20px; padding: 40px; flex: 1; align-items: center; justify-content: center;",
                "dropZoneClasses": "drop-zone"
            },
            "parentIndex": 0
        },
        {
            "type": "tv",
            "values": {
                "tvId": 1,
                "tvName": "product_image",
                "tvType": "image",
                "content": "{{$documentObject['product_image']}}",
                "alt": "{{$documentObject['product_name']}}",
                "targetStyles": "max-width: 100%; border-radius: 20px; box-shadow: 0 20px 40px rgba(0,0,0,0.2);",
                "targetClasses": "img-fluid shadow-lg"
            },
            "parentIndex": 6
        }
    ]
}