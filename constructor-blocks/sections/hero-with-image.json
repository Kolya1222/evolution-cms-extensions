{
    "title": "Hero с изображением",
    "description": "Блок приветствия с фоновым изображением и кнопкой",
    "type": "section",
    "tags": ["hero", "header", "welcome", "bootstrap", "background"],
    "framework": "bootstrap",
    "tv": ["hero_title", "hero_subtitle", "hero_image", "hero_button_text", "hero_button_link"],
    "elements": [
        {
            "type": "row",
            "values": {
                "dropZoneStyles": "display: flex; flex-direction: row; gap: 0; padding: 0; min-height: 600px;",
                "dropZoneClasses": "drop-zone"
            }
        },
        {
            "type": "column",
            "values": {
                "dropZoneStyles": "display: flex; flex-direction: column; gap: 20px; padding: 80px; flex: 1; justify-content: center;",
                "dropZoneClasses": "drop-zone"
            },
            "parentIndex": 0
        },
        {
            "type": "content",
            "values": {
                "content": "<h1 class='display-3'>{{$documentObject['hero_title']}}</h1>",
                "innerStyles": "font-weight: 700;",
                "innerClasses": "content-holder"
            },
            "parentIndex": 1
        },
        {
            "type": "content",
            "values": {
                "content": "<p class='lead'>{{$documentObject['hero_subtitle']}}</p>",
                "innerClasses": "content-holder"
            },
            "parentIndex": 1
        },
        {
            "type": "button",
            "values": {
                "content": "{{$documentObject['hero_button_text']}}",
                "href": "{{$documentObject['hero_button_link']}}",
                "innerStyles": "background: #0d6efd; color: white; border: none; padding: 12px 30px; border-radius: 5px;",
                "innerClasses": "btn btn-primary btn-lg"
            },
            "parentIndex": 1
        },
        {
            "type": "column",
            "values": {
                "dropZoneStyles": "display: flex; flex-direction: column; padding: 0; flex: 1;",
                "dropZoneClasses": "drop-zone"
            },
            "parentIndex": 0
        },
        {
            "type": "tv",
            "values": {
                "tvId": 1,
                "tvName": "hero_image",
                "tvType": "image",
                "content": "{{$documentObject['hero_image']}}",
                "alt": "Hero background",
                "targetStyles": "width: 100%; height: 100%; object-fit: cover;",
                "targetClasses": "img-fluid"
            },
            "parentIndex": 5
        }
    ]
}